@model IEnumerable<ArticlePublisher.Models.Post>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Post Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<form asp-controller="Posts" asp-action="Index" method="get">
    <p>
        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Post ID: @item.Id
                </div>
                <div class="card-body">
                    <h5 class="card-title">@item.PostName</h5>
                    <p class="card-text">
                        @{
                            var desc = item.PostDescription;
                        }
                        @desc.Substring(0, desc.Length / 2)...
                    </p>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Read More</a>
                </div>
            </div>
        </div>
    }
</div>
